{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "no-await-in-loop": "error",
        "no-useless-escape": "off",
        "prefer-const": "error",
        "no-var": "error",
        "no-inner-declarations": "off"
    }
}
