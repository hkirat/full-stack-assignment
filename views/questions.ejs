<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        .container {
            text-align: center;
            margin: 2rem;
        }

        .intro {
            font-size: 1.5rem;
            margin-bottom: 2rem;
        }

        .question-list {
            list-style: none;
            padding: 0;
        }

        .question-item {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
        }

        .question-item:hover {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <header>
        <h1>Questions</h1>
    </header>
    
    <ul class="question-list">
        <% QUESTIONS.forEach(function(question, index) { %>
            <li class="question-item" onclick="redirectToSolution(<%= index %>)">
                <strong><%= question.title %></strong><br>
                <%= question.description %><br>
                Test Input: <%= question.testCases[0].input %><br>
                Expected Output: <%= question.testCases[0].output %>
            </li>
        <% }); %>
    </ul>

    <script>
        function redirectToSolution(index) {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');

            window.location.href = `/submissions/?token=${token}&question_id=${index}`;
        }
    </script>
</body>

</html>
